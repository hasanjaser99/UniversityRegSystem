@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Courses</h2>

<div class="row flex mt-5">
    <div class="col-12 mt-1">
        <div class="mt-5 mb-4">
            @Html.ActionLink("Add New Course", // <-- Link text
           "UpsertCourse", // <-- Action Method Name
           null, // <-- Action payload
           new { @class = "btn btn-success btn-lg" } // <-- htmlArguments
           )
        </div>
        <br />
        <div id="table">
            <table id="tblData" class="table table-bordered mt-5">
                <thead>
                    <tr>
                        <th>
                            Course Name
                        </th>

                        <th>
                            Course Field
                        </th>
                        <th>
                            Previous Course
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": {
                    "url": "/Course/GetCourses"
                },
                "columns": [
                    { "data": "Name", "width": "15%" },
                    { "data": "Field.Name", "width": "15%" },
                    {
                        "data": "PreviousCourse",
                        "render": function (data) {
                            if (data) {
                                return data.Name;
                            }
                            return "None";
                        }, "width": "15%"
                    },
                    {
                        "data": "Id",
                        "render": function (data) {
                            return `
                                    <div class="text-center">
                                        <a href="/Course/UpsertCourse/?id=${data}" class="btn btn-success text-white" style="cursor:pointer">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a onclick=DeleteCourse(${data}) class="btn btn-danger text-white" style="cursor:pointer">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                   `;
                        }, "width": "20%"
                    },
                    {
                        "data": null,
                        "render": function (data) {
                            return `
                                    <div class="text-center">
                                        <a href="/Section/Index/?departmentId=${data.Field.DepartmentId}&courseId=${data.Id}" class="btn btn-success text-white" style="cursor:pointer">
                                            <span>View Sections</span>
                                        </a>
                                    </div>
                                   `;
                        }, "width": "20%"
                    },
                ]
            });
        }

        function DeleteCourse(id) {
            swal({
                title: "Are you sure you want to delete course",
                text: "You can't retrive data after deleted",
                icon: "warning",
                buttons: true,
                dangerMode: true
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "DELETE",
                        url: `/Course/DeleteCourse/?id=${id}`,
                        success: function (data) {
                            if (data.success) {
                                toastr.success(data.message);
                                dataTable.ajax.reload();
                            } else {
                                toastr.error(data.message);
                            }
                        }
                    });
                }
            });
        }
    </script>
}
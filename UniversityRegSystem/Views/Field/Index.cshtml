@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Fields</h2>

<div class="row flex mt-5">
    <div class="col-12 mt-1">
        <div class="mt-5 mb-4">
            @Html.ActionLink("Add New Field", // <-- Link text
           "UpsertField", // <-- Action Method Name
           null, // <-- Action payload
           new { @class = "btn btn-success btn-lg" } // <-- htmlArguments
           )
        </div>
        <br />
        <div id="table">
            <table id="tblData" class="table table-bordered mt-5">
                <thead>
                    <tr>
                        <th>
                            Field Name
                        </th>

                        <th>
                            Number Of Hours
                        </th>

                        <th>
                            Field's Department
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": {
                    "url": "/Field/GetFields"
                },
                "columns": [
                    { "data": "Name", "width": "15%" },
                    { "data": "NumberOfHours", "width": "15%" },
                    { "data": "Department.Name", "width": "15%" },
                    {
                        "data": "Id",
                        "render": function (data) {
                            return `
                                <div class="text-center">
                                    <a href="/Field/UpsertField/?id=${data}" class="btn btn-success text-white" style="cursor:pointer">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a onclick=DeleteField(${data}) class="btn btn-danger text-white" style="cursor:pointer">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                               `;
                        }, "width": "20%"
                    },
                    {
                        "data": "Id",
                        "render": function (data) {
                            return `
                                <div class="text-center">
                                    <a href="/FieldCourse/Index/?fieldId=${data}" class="btn btn-success text-white" style="cursor:pointer">
                                        <span>View Courses</span>
                                    </a>
                                </div>
                               `;
                        }, "width": "20%"
                    },
                ]
            });
        }

        function DeleteField(id) {
            swal({
                title: "Are you sure you want to delete field",
                text: "You can't retrive data after deleted",
                icon: "warning",
                buttons: true,
                dangerMode: true
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "DELETE",
                        url: `/Field/DeleteField/?id=${id}`,
                        success: function (data) {
                            if (data.success) {
                                toastr.success(data.message);
                                dataTable.ajax.reload();
                            } else {
                                toastr.error(data.message);
                            }
                        }
                    });
                }
            });
        }
    </script>
}
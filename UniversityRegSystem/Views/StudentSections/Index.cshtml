@using UniversityRegSystem.Shared.DTOS
@model List<StudentSectionsDTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}


@if (Model.Count > 0)
{
    <h2>My Classes Schedule</h2>
    <div class="row flex mt-5">
        <div class="col-12 mt-1">
            <div id="table">
                <table id="tblData" class="table table-bordered mt-5">
                    <thead>
                        <tr>
                            <th>
                                Course Name
                            </th>

                            <th>
                                Days
                            </th>

                            <th>
                                Start Time
                            </th>

                            <th>
                                End Time
                            </th>

                            <th>
                                Teacher Name
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var studentSection in Model)
                        {
                            <tr id="@studentSection.SectionId">
                                <td>@studentSection.CourseName</td>
                                <td>@studentSection.Days</td>
                                <td>@studentSection.StartTime</td>
                                <td>@studentSection.EndTime</td>
                                <td>@studentSection.TeacherName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}



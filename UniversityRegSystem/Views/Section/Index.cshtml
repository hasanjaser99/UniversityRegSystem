@model UniversityRegSystem.ViewModels.SectionIndexVM

@{
    ViewBag.Title = "Index";
}

<h2>Sections</h2>

<div class="row flex mt-5">
    <div class="col-12 mt-1">
        <div class="mt-5 mb-4">
            @Html.ActionLink("Add New Section", // <-- Link text
           "UpsertSection", // <-- Action Method Name
           new { departmentId = Model.DepartmentId, courseId = Model.CourseId }, // <-- Action payload
           new { @class = "btn btn-success btn-lg" } // <-- htmlArguments
           )
        </div>
        <br />
        <div id="table">
            <table id="tblData" class="table table-bordered mt-5">
                <thead>
                    <tr>
                        <th>
                            Course Name
                        </th>

                        <th>
                            Days
                        </th>

                        <th>
                            Start Time - End Time
                        </th>

                        <th>
                            Maximum Number Of Students
                        </th>

                        <th>
                            Teacher
                        </th>

                        <th>
                            Number
                        </th>

                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": {
                    "url": "/Section/GetSections?courseId=@Model.CourseId"
                },
                "columns": [
                    { "data": "Course.Name", "width": "15%" },
                    { "data": "Days", "width": "15%" },
                    {
                        "data": null,
                        "render": function (data) {
                            return `
                                ${data.StartTime} - ${data.EndTime}
                               `;
                        }, "width": "15%"
                    },
                    { "data": "MaxNumberOfStudents", "width": "15%" },
                    { "data": "Teacher.Name", "width": "15%" },
                    { "data": "Number", "width": "10%" },
                    {
                        "data": "Id",
                        "render": function (data) {
                            return `
                                <div class="text-center">
                                    <a href="/Section/UpsertSection/?departmentId=@Model.DepartmentId&courseId=@Model.CourseId&id=${data}" class="btn btn-success text-white" style="cursor:pointer">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a onclick=DeleteSection(${data}) class="btn btn-danger text-white" style="cursor:pointer">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                               `;
                        }, "width": "40%"
                    }
                ]
            });
        }

        function DeleteSection(id) {
            swal({
                title: "Are you sure you want to delete section",
                text: "You can't retrive data after deleted",
                icon: "warning",
                buttons: true,
                dangerMode: true
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "DELETE",
                        url: `/Section/DeleteSection/?id=${id}`,
                        success: function (data) {
                            if (data.success) {
                                toastr.success(data.message);
                                dataTable.ajax.reload();
                            } else {
                                toastr.error(data.mesModelage);
                            }
                        }
                    });
                }
            });
        }
    </script>
}